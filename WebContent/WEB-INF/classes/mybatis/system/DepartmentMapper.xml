<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DepartmentMapper">
	
	<!--表名 -->
	<sql id="tableName">
		SYS_DEPARTMENT
	</sql>
	
	
	<!-- 字段 -->
	<sql id="Field">
	    DEPARTMENT_ID,
		NAME,	
		PARENT_ID,
		REMARK,
		CHIEFNAME,
		CHIEFPHONE,
		ADDRESS
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
	    #{DEPARTMENT_ID},	
		#{NAME},	
		#{PARENT_ID},
		#{REMARK},
		#{CHIEFNAME},
		#{CHIEFPHONE},
		#{ADDRESS}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
		  DEPARTMENT_ID = #{DEPARTMENT_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NAME = #{NAME},
			CHIEFNAME = #{CHIEFNAME},
			REMARK = #{REMARK},
			CHIEFPHONE = #{CHIEFPHONE},
			ADDRESS = #{ADDRESS}
		where 
		DEPARTMENT_ID = #{DEPARTMENT_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="String" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
		 DEPARTMENT_ID = #{DEPARTMENT_ID}
	</select>
	
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where
			1=1
		<if test="pd.DEPARTMENT_ID!= null and pd.DEPARTMENT_ID != ''"><!-- 检索 -->
		and PARENT_ID = #{pd.DEPARTMENT_ID}
		</if>		 
	</select>
	
	<!-- 通过ID获取其子级列表 -->
	<select id="findListByPId" parameterType="String" resultType="Department">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			PARENT_ID = #{parentId} 
			order by NAME 
	</select>
	
	<!--查询最大序列值-->
	<select id="findMaxOrder" parameterType="String" resultType="String">
		select MAX(CODE) max from 
		<include refid="tableName"></include>
		where PARENT_ID=#{PARENT_ID}
	</select>
	
	

</mapper>